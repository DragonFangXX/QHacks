<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.qhacks.UserProfile">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_star"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="58dp"
        android:id="@+id/homeImageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_myplaces"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="60dp"
        android:id="@+id/profileImageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_search"
        android:layout_alignTop="@+id/profileImageView"
        android:layout_centerHorizontal="true"
        android:id="@+id/searchImageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/doctor"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView2"
        android:layout_alignEnd="@+id/searchImageView"
        android:layout_alignBottom="@+id/userLocation" />

    <TextView
        android:text="User Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView2" />

    <TextView
        android:text="User's Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:id="@+id/userLocation"
        android:layout_below="@+id/userPhone"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView2" />

    <TextView
        android:text="User's Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:id="@+id/userPhone"
        android:layout_below="@+id/nameLabel"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView2" />

    <TextView
        android:text="User's Symptoms/Field of Study"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:id="@+id/userQualification"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="User' Description"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@+id/userQualification"
        android:layout_marginTop="46dp"
        android:id="@+id/userDescription"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Information"
        android:id="@+id/button"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/profileImageView"
        android:layout_toEndOf="@+id/homeImageView" />

</RelativeLayout>
